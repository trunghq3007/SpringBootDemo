		<script>
			$("#btn-go-to-top").click(function() {
				$("html, body").animate({
					scrollTop : 0
				}, "slow");
			});
			$("#btn-login").click(function() {
				window.location.assign("Login.jsp");
			});
			function validateEmail(email) {
				var re = /^(([^<>()\[\]\\.,;:\s@"]+(\.[^<>()\[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
				return re.test(String(email).toLowerCase());
			}

			$("#btn-register").click(function() {
						var fullName = $("#input-name").val();
						var telephoneNumber = $("#txt-telephone").val();
						var email = $("#txt-email").val();
						var pwd = $("#txt-password").val();
						var rePwd = $("#txt-repassword").val();
						if (pwd == rePwd && validateEmail(email)) {
								$.ajax({
											url : "MainServlet",
											type : "POST",
											data : {
											fullName : fullName,
											telephoneNumber : telephoneNumber,
											email : email,
											pwd : pwd
											},
											success : function(value) {
												if (value.toString() == "true") {
													alert("Đăng ký tài khoản thành công");
													window.location.assign("Login.jsp");
												} else {
													alert("Đăng ký tài khoản thất bại");
												}
											}
										});
								} else {
									alert("Mật khẩu nhập lại không đúng hoặc email không đúng định dạng");
									$("#txt-password").val("");
									$("#txt-repassword").val("");
								}
							});
		</script>

